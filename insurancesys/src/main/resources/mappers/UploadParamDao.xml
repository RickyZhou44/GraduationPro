<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="whu.iss.insurancesys.dao.HumanResourceParamDaos.UploadParamDao">

    <update id="update"
            parameterType="whu.iss.insurancesys.entity.HumanResourceParamEntities.UploadParam">
        update upload_param
        <set>
            <if test="id != null">id = #{id}, </if>
            <if test="photo_max != null">photo_max = #{photo_max}, </if>
            <if test="single_file_max != null">single_file_max = #{single_file_max}, </if>
            <if test="single_folder_max != null">single_folder_max = #{single_folder_max}, </if>
        </set>
        <where>
            <if test="id != null">id = #{id}</if>
        </where>
        ;
    </update>

    <select id="getAll" parameterType="whu.iss.insurancesys.entity.HumanResourceParamEntities.UploadParam">
        select * from upload_param;
    </select>

</mapper>