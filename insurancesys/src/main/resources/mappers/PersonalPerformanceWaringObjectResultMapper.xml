<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="whu.iss.insurancesys.dao.PersonalPerformanceWaringObjectResultDao">
    <resultMap id="BaseResultMap" type="whu.iss.insurancesys.entity.PersonalPerformanceWaringObjectResult">
        <result column="Chinese_name" jdbcType="INTEGER" property="name"/>
        <result column="employee_no" jdbcType="CHAR" property="number"/>
        <result column="certificate_no" jdbcType="VARCHAR" property="idCard"/>
        <result column="branch_name" jdbcType="VARCHAR" property="branch"/>
        <result column="current_rank" jdbcType="VARCHAR" property="rank"/>
        <result column="department" jdbcType="VARCHAR" property="dept"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        select chinese_name,employ_no,certificate_no,branch_name,current_rank,department
        from employee_basic_information,employee_unit_rank
        <where>
            <if test="name!=null">Chinese_name=#{name}</if>
            <if test="number!=null">and employee_no=#{number}</if>
            <if test="idCard!=null">and certificate_no=#{idCard}</if>
            <if test="branchs!=null">and branchs in
                <foreach collection="array" open="(" close=")" separator="," item="branchs">
                    #{branchs}
                </foreach>
            </if>
        </where>
    </select>
</mapper>
